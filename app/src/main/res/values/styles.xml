<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#CCE4FB</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="EditTextProfileTheme">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">@color/user_edit_profile_edit_text_activated_color</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/launchScreen_ColorPrimaryDark</item>
    </style>

    <style name="RatingBarColor" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
