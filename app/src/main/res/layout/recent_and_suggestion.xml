<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/search_view_suggest_item_parent_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/llRecentAndSuggest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/search_view_suggest_item_padding_vertical"
            android:paddingStart="@dimen/search_view_suggest_item_padding_start"
            android:paddingTop="@dimen/search_view_suggest_item_padding_vertical">

            <ImageView
                android:id="@+id/imgRecentAndSuggest"
                android:layout_width="@dimen/search_view_suggest_item_img_search_size"
                android:layout_height="@dimen/search_view_suggest_item_img_search_size"
                android:hapticFeedbackEnabled="false"
                android:src="@drawable/ic_search" />

            <TextView
                android:id="@+id/txtSuggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/search_view_suggest_item_text_margin_left"
                android:padding="@dimen/search_view_suggest_item_text_padding"
                android:text="test"
                android:textColor="@color/search_view_suggest_item_text_color"
                android:textSize="@dimen/search_view_suggest_item_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSearchCommit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/search_view_suggest_item_padding_vertical"
            android:paddingEnd="@dimen/search_view_suggest_item_padding_end"
            android:paddingTop="@dimen/search_view_suggest_item_padding_vertical">

            <ImageView
                android:layout_width="@dimen/search_view_suggest_item_img_commit_size"
                android:layout_height="@dimen/search_view_suggest_item_img_commit_size"
                android:src="@drawable/ic_search_commit" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>