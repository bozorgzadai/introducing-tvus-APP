<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uni_detail_bg"
    android:paddingBottom="@dimen/uni_details_data_padding_bottom"
    android:paddingLeft="@dimen/uni_details_padding_start_end"
    android:paddingRight="@dimen/uni_details_padding_start_end"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bozorgzad.ali.introducingtvus.ActivityUniDetails"
    tools:showIn="@layout/activity_uni_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/uni_details_data_magine_between_layout"
            android:background="@color/uni_detail_bg"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/llMoreInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/ripple_uni_details_btn"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/uni_details_top_btns_padding_top_bottom"
                android:paddingTop="@dimen/uni_details_top_btns_padding_top_bottom">

                <TextView
                    android:id="@+id/txtMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_top_btns_icon_margin_left"
                    android:text="@string/icon_file_text"
                    android:textSize="@dimen/uni_details_top_btns_icon_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uni_detail_more_info" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/uni_details_top_btns_space_between"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/llUserReviews"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/ripple_uni_details_btn"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/uni_details_top_btns_padding_top_bottom"
                android:paddingTop="@dimen/uni_details_top_btns_padding_top_bottom">

                <TextView
                    android:id="@+id/txtReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_top_btns_icon_margin_left"
                    android:text="@string/icon_comments"
                    android:textSize="@dimen/uni_details_top_btns_icon_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uni_detail_user_reviews" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/uni_details_data_magine_between_layout"
            android:background="@color/uni_detail_data_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/uni_details_data_padding_bottom"
            android:paddingEnd="@dimen/uni_details_data_padding_start"
            android:paddingStart="@dimen/uni_details_data_padding_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUniLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                        android:text="@string/uni_detail_data_logo"
                        android:textColor="@color/uni_detail_data_color_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgUniLogo"
                        android:layout_width="@dimen/uni_logo_width"
                        android:layout_height="@dimen/uni_logo_height"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniFullNameTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_full_name"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniFullNameData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniEstablishedTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_established"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniEstablishedData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniTypeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_type"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniTypeData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniBossTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_boss"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniPresidentData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtEducationalAssistantTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_educational_assistant"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtEducationalAssistantData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtStudentAssistantTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_student_assistant"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtStudentAssistantData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtNumberOfStudentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_number_of_students"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtStudentNumberData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtAssociateDegreeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_associate_degrees"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtAssociateDegreeMajorsData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtBachelorDegreeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_bachelor_degrees"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtBachelorDegreeMajorsData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtDependentOnTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_data_depend_on"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtAffiliationsData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUniWebsiteTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                        android:text="@string/uni_detail_data_website"
                        android:textColor="@color/uni_detail_data_color_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUniWebsiteData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uni_detail_not_define"
                        android:textColor="@color/uni_detail_data_color_data"
                        android:textStyle="italic" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/uni_details_data_magine_between_layout"
            android:background="@color/uni_detail_data_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLittleDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/uni_details_data_padding_bottom"
                android:paddingEnd="@dimen/uni_details_data_padding_start"
                android:paddingStart="@dimen/uni_details_data_padding_start"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item"
                android:text="@string/uni_detail_not_define" />

            <LinearLayout
                android:id="@+id/llDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="@dimen/uni_details_data_magine_divider"
                android:layout_marginStart="@dimen/uni_details_data_magine_divider"
                android:background="@color/uni_detail_data_color_title"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/txtReadMoreAndLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/uni_details_data_magine_divider"
                android:layout_marginStart="@dimen/uni_details_data_magine_divider"
                android:background="@drawable/ripple_uni_details_btn"
                android:gravity="center"
                android:paddingBottom="@dimen/uni_details_data_read_more_margin_bottom"
                android:paddingTop="@dimen/uni_details_data_read_more_margin_top"
                android:text="@string/uni_detail_read_more"
                android:textSize="@dimen/uni_details_data_read_more_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/uni_details_data_magine_between_layout"
            android:background="@color/uni_detail_data_bg"
            android:orientation="vertical"
            android:paddingEnd="@dimen/uni_details_data_padding_start"
            android:paddingStart="@dimen/uni_details_data_padding_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniStateTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_state"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniStateData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniCityTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_city"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniCityData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <TextView
                    android:id="@+id/txtUniAddressTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/uni_details_data_padding_end_each_title"
                    android:layout_weight="0.25"
                    android:text="@string/uni_detail_address"
                    android:textColor="@color/uni_detail_data_color_title" />

                <TextView
                    android:id="@+id/txtUniAddressData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="@string/uni_detail_not_define"
                    android:textColor="@color/uni_detail_data_color_data" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMapWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/uni_details_data_padding_top_each_item">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/uni_detail_bg_map_not_view"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/uni_details_data_map_view_height" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnShowInMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/uni_details_data_btn_show_maps_margin_bottom"
                    android:layout_marginTop="@dimen/uni_details_data_btn_show_maps_margin_top"
                    app:backgroundTint="@color/project_btn_bg"
                    android:paddingEnd="@dimen/project_btn_padding_horizontal"
                    android:paddingStart="@dimen/project_btn_padding_horizontal"
                    android:text="@string/uni_detail_show_in_maps"
                    android:textColor="@color/project_btn_text_color" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
