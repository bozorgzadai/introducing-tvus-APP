<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uni_more_info_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/uni_more_info_padding_bottom">

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/uni_more_info_title_and_ll_expandables_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUniFullNameMoreInfoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/uni_more_info_text_margin"
                android:gravity="center"
                android:textColor="@color/uni_more_info_full_name_title_color"
                android:textSize="@dimen/uni_more_info_full_name_title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_title_divider_color"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnExpandableHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_uni_more_info"
                android:drawablePadding="@dimen/uni_more_info_btn_expandable_drawable_padding"
                android:drawableStart="@drawable/ic_collapse"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingEnd="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:paddingStart="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:tag="true"
                android:text="@string/uni_more_info_history_title"
                android:textAllCaps="false"
                android:textColor="@color/uni_more_info_btn_expandables_text_color" />

            <LinearLayout
                android:id="@+id/llEpandableHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uni_more_info_title_and_ll_expandables_bg"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/uni_more_info_text_margin"
                    android:textColor="@color/uni_more_info_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_divider_color"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNamesFromBeginning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnExpandableNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_uni_more_info"
                android:drawablePadding="@dimen/uni_more_info_btn_expandable_drawable_padding"
                android:drawableStart="@drawable/ic_expand"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingEnd="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:paddingStart="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:tag="false"
                android:text="@string/uni_more_info_names_form_the_beginning_title"
                android:textAllCaps="false"
                android:textColor="@color/uni_more_info_btn_expandables_text_color" />

            <LinearLayout
                android:id="@+id/llExpandableNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uni_more_info_title_and_ll_expandables_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/uni_more_info_text_margin"
                    android:textColor="@color/uni_more_info_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_divider_color"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPresidentsFromBeginning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnExpandablePresidents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_uni_more_info"
                android:drawablePadding="@dimen/uni_more_info_btn_expandable_drawable_padding"
                android:drawableStart="@drawable/ic_expand"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingEnd="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:paddingStart="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:tag="false"
                android:text="@string/uni_more_info_presidents_form_the_beginning_title"
                android:textAllCaps="false"
                android:textColor="@color/uni_more_info_btn_expandables_text_color" />

            <LinearLayout
                android:id="@+id/llExpandablePresidents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uni_more_info_title_and_ll_expandables_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtPresidents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/uni_more_info_text_margin"
                    android:textColor="@color/uni_more_info_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_divider_color"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEducationalGroupsAndMajors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnExpandableEducationalGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_uni_more_info"
                android:drawablePadding="@dimen/uni_more_info_btn_expandable_drawable_padding"
                android:drawableStart="@drawable/ic_expand"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingEnd="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:paddingStart="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:tag="false"
                android:text="@string/uni_more_info_educational_groups_and_majors_title"
                android:textAllCaps="false"
                android:textColor="@color/uni_more_info_btn_expandables_text_color" />

            <LinearLayout
                android:id="@+id/llExpandableEducationalGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uni_more_info_title_and_ll_expandables_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtEducationalGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/uni_more_info_text_margin"
                    android:textColor="@color/uni_more_info_text_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_divider_color"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHonours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnExpandableHonours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_uni_more_info"
                android:drawablePadding="@dimen/uni_more_info_btn_expandable_drawable_padding"
                android:drawableStart="@drawable/ic_expand"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingEnd="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:paddingStart="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:tag="false"
                android:text="@string/uni_more_info_honour_title"
                android:textAllCaps="false"
                android:textColor="@color/uni_more_info_btn_expandables_text_color" />

            <LinearLayout
                android:id="@+id/llExpandableHonours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uni_more_info_title_and_ll_expandables_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtHonours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/uni_more_info_text_margin"
                    android:textColor="@color/uni_more_info_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_divider_color"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAdditionalExplanations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnExpandableAdditionalExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_uni_more_info"
                android:drawablePadding="@dimen/uni_more_info_btn_expandable_drawable_padding"
                android:drawableStart="@drawable/ic_expand"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingEnd="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:paddingStart="@dimen/uni_more_info_btn_expandable_padding_start_and_end"
                android:tag="false"
                android:text="@string/uni_more_info_additional_explanation_title"
                android:textAllCaps="false"
                android:textColor="@color/uni_more_info_btn_expandables_text_color" />

            <LinearLayout
                android:id="@+id/llExpandableAdditionalExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uni_more_info_title_and_ll_expandables_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtAdditionalExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/uni_more_info_text_margin"
                    android:textColor="@color/uni_more_info_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/uni_more_info_divider_size"
                android:background="@color/uni_more_info_divider_color"
                android:orientation="vertical" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>